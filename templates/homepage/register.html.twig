{% include "base.html.twig" %}

{% block title %}Inscription
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/homepage/register.css') }}"/>
{% endblock %}

{% block body %}

	<br><br><br><br><br><br>

	<form name="new_user" class="container" method="post">

		<h2>Veuillez saisir vos coordonnées, l'inscription sera validée par le support</h2><br>

		{{ form_start(form) }}

		{{ form_row(form.lastname, {'label': 'Nom :', 'attr': {'placeholder': "Entrer votre nom"}}) }}
		{{ form_row(form.firstname, {'label': 'Prénom :', 'attr': {'placeholder': "Entrer votre prénom"}}) }}
		{{ form_row(form.ipn, {'label': 'IPN :', 'attr': {'placeholder': "Entrer votre IPN"}}) }}
		{{ form_row(form.mail, {'label': 'Adresse mail :', 'attr': {'placeholder': "Entrer votre adresse mail"}}) }}
		{{ form_row(form.workshop, {'label': 'Atelier :', 'placeholder': "Sélectionner votre atelier"}) }}
		{{ form_row(form.status, {'label': 'Statut :', 'placeholder': "Sélectionner votre statut"}) }}
		{{ form_row(form.plainPassword.first, {'label': 'Mot de passe :', 'attr': {'placeholder': "Entrer votre mot de passe"}}) }}
		{{ form_row(form.plainPassword.second, {'label': 'Confirmation du mot de passe :', 'attr': {'placeholder': "Confirmer votre mot de passe"}}) }}

		<div class="clearfix">
			<a href="{{ path ('app_login')}}">
				<button type="button" class="cancelbtn">Retour</button>
			</a>
			<button type="submit" class="signupbtn">S'inscrire</button>
		</div>

		{{ form_end(form) }}

	</form>

{% endblock %}
